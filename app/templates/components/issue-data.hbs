<div id="table-div">
    <table id='data-table' class='table table-striped table-bordered table-sm'>
        <thead>
            <tr>
                {{#each header as |item|}}
                <th>{{item}}</th>
                {{/each}}
            </tr>
        </thead>
        <tbody id='data-table-body'>
            {{#each issues as |issue|}}
                <tr>
                    {{#each issue as |column|}}
                        <td>{{column}}</td>
                    {{/each}}
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{yield}}
